{
  "AllowedHosts": "*",
  "BasePath": "/",
  "Port": 5001,
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=casual-admin;Username=postgres;Password=123456;Pooling=true"
  },
  "Database": {
    "Type": "PostgreSQL"
  },
  "Jwt": {
    "Issuer": "CasualAdmin-api",
    "Audience": "CasualAdmin-client",
    "Key": "CasualAdmin-secret-key-20240101",
    "ExpireHours": "24"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Hosting": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.AspNetCore.StaticFiles": "Warning",
        "Microsoft.AspNetCore.HttpLogging": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "wwwroot/logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "LoggingMiddleware": {
    "IncludeRequestBody": true,
    "IncludeResponseBody": false,
    "RequestBodySizeLimit": 102400,
    "ResponseBodySizeLimit": 1048576,
    "ExcludePaths": [
      "/swagger",
      "/favicon.ico"
    ],
    "ExcludeMethods": []
  },
  "FileStorage": {
    "Type": "Local",
    "AccessKeyId": "",
    "AccessKeySecret": "",
    "BucketName": "",
    "Region": "",
    "Endpoint": "",
    "LocalPath": "wwwroot/files",
    "BaseUrl": "/files"
  },
  "SqlSugar": {
    "ShowSql": true,
    "EnableCodeFirst": false,
    "DropExistingTables": false
  },
  "MultiTenancy": {
    "IsEnabled": true,
    "DefaultTenantId": "00000000-0000-0000-0000-000000000000"
  }
}